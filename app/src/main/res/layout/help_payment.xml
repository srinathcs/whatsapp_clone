<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvSentPayment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp100">

        <com.whatsapp.clone.widgets.accountItemView.AccountItemView
            android:id="@+id/aivPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp10" />

        <com.whatsapp.clone.widgets.accountItemView.AccountItemView
            android:id="@+id/aivScanPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp10"
            android:layout_marginTop="@dimen/dp50" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvHistory"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp150"
        android:layout_marginTop="@dimen/dp10">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitleHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp10"
            android:textColor="@color/green"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivPaymentHistory"
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp50"
            android:layout_gravity="center" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPaymentHistoryDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp100"
            android:textAlignment="center"
            android:textColor="@color/gray_25" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvPaymentMethod"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp140"
        android:layout_marginTop="@dimen/dp10">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp10"
            android:textColor="@color/green"
            android:textStyle="bold" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp50"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp80"
                app:cardBackgroundColor="@color/enable_thumb_lite_green">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivPaymentMethod"
                    android:layout_width="@dimen/dp25"
                    android:layout_height="@dimen/dp25"
                    android:layout_marginStart="@dimen/dp20"
                    android:layout_marginTop="@dimen/dp20" />

                <WebView
                    android:id="@+id/wvPaymentMethod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp55"
                    android:layout_marginEnd="@dimen/dp6"
                    android:background="@color/enable_thumb_lite_green" />
            </androidx.cardview.widget.CardView>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvAddPayment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50">

        <com.whatsapp.clone.widgets.accountItemView.AccountItemView
            android:id="@+id/aivAddPaymentMethod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvPaymentHelp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:layout_marginTop="@dimen/dp10">

        <com.whatsapp.clone.widgets.accountItemView.AccountItemView
            android:id="@+id/aivHelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivUpi"
        android:layout_width="@dimen/dp80"
        android:layout_height="@dimen/dp60"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp10" />


</androidx.appcompat.widget.LinearLayoutCompat>